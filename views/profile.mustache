{{#users}}
<div class="container">
        <div class="picture">
          <img src="{{avatar}}">
        </div>

          <h2>{{name}}</h2>

          <div class="info">
            {{#address}}
            <p>{{address.city}}, {{address.country}}</p>
            {{^address.city}}
            <p class="missingData"></p>
            {{/address.city}}
            {{/address}}

            {{#job}}
            <p>{{job}}, {{company}}</p>
            {{/job}}
            {{^job}}
            <p class="forHire">Available for hire</p>
            {{/job}}

            <p>{{email}} {{phone}}</p>

          </div>

          <div class="stats">
            {{#university}}
            <p>Education {{university}}</p>
            {{/university}}
            {{^university}}
            <p class="missingData"></p>
            {{/university}}
            <p>Skills {{skills}}</p>
          </div>
      </div>
{{/users}}
