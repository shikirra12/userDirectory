<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Directory</title>
    <link rel="stylesheet" href="../style.css">
  </head>
  <body>
    <nav>
      <a href="/unemployed/{{job}}">Unemployed</a>
      <a href="/employed/{{job}}">Employed</a>
    </nav>
    <h1>Index</h1>
    {{#users}}
      <a href="/profile/{{id}}">
        <div class="container">
          <div class="boxes">

            <img src="{{avatar}}">

            <h3>{{name}}</h3>

              {{#job}}
              <p>{{job}}, {{company}}</p>
              {{/job}}
              {{^job}}
              <p class="forHire">Available for hire</p>
              {{/job}}

          </div>
        </div>
        </a>
    {{/users}}
  </body>
</html>
